    FloatLayout:  # Use FloatLayout to position the buttons lower
        BoxLayout:
            orientation: 'vertical'
            size_hint: (None, None)
            size: (150, 40)
            pos_hint: {'center_x': 0.5, 'y': 0.1}  # Lower position
            Button:
                text: 'Next'
