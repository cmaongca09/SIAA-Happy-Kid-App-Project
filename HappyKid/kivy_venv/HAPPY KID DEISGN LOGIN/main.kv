                multiline: False
                size_hint: None, None
                size: 300, 40
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: phone_number
                hint_text: 'Phone Number'
                multiline: False
                size_hint: None, None
                size: 300, 40
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: home_address
                hint_text: 'Home Address'
                multiline: False
                size_hint: None, None
                size: 300, 40
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: username
                hint_text: 'Username'
                multiline: False
                size_hint: None, None
                size: 300, 40
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: password
                hint_text: 'Password'
                password: True
                multiline: False
                size_hint: None, None
                size: 300, 40
                pos_hint: {'center_x': 0.5}  # Center horizontally
            Button:
                text: 'LogIn'
                on_press: root.manager.current = 'main'
