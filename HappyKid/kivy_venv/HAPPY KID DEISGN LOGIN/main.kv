<LoginScreen>:
    name: 'login'
    Image:
        source: 'mbg.png'
        allow_stretch: True
        keep_ratio: False
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
    GridLayout:
        cols: 1
        rows: 4
        padding: 50
        spacing: 50
        size: root.width, root.height
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 300
            Image:
                source: 'logo.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: None, None
                size: 250,210  # Set the size of the image
                pos_hint: {'center_x': 0.5}  # Center the image horizontally
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: 360  # Rotate the image by 45 degrees
                        axis: 0, 0, 1  # Rotate around the z-axis
                        origin: self.center  # Rotate around the center of the image
                canvas.after:
                    PopMatrix
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 200
            padding: 50
            spacing: 10

            TextInput:
                id: username
                hint_text: 'Username'
                multiline: False
                size_hint: None, None
                size: 300, 30  # Set the size of the username input field
                pos_hint: {'center_x': 0.5}  # Center the username input horizontally

            TextInput:
                id: password
                hint_text: 'Password'
                password: True
                multiline: False
                size_hint: None, None
                size: 300, 30  # Set the size of the password input field
                pos_hint: {'center_x': 0.5}  # Center the password input horizontally
            Button:
                text: 'Login'
                on_press: root.manager.current = 'main'
                size_hint: None, None
                size: 180, 30  # Set the size of the login button
                pos_hint: {'center_x': 0.5}  # Center the button horizontally
                background_color: 0, 2, 0, 2  # Green color
                color: 1, 1, 1, 1  # White text color
            Button:
                text: 'Create Account'
                on_press: root.create_account()
                size_hint: None, None
                size: 150, 30  # Set the size of the create account button
                pos_hint: {'center_x': 0.5}  # Center the button horizontally
                background_color: 0, 2, 0, 2  # Green color
                color: 1, 1, 1, 1  # White text color

<CreateAccountScreen>:
    name: 'create_account'
    Image:
        source: 'mbg.png'
        allow_stretch: True
        keep_ratio: False
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
    GridLayout:
        cols: 1
        rows: 5  # Increase rows to accommodate the logo
        padding: 100  # Adjust padding as needed
        spacing: 10
        size: root.width, root.height
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Center the grid layout
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 590
            padding: 100
            spacing: 10
            size_hint_x: 1  # Occupy full width
            pos_hint: {'center_x': 0.5}  # Center horizontally
            Image:
                source: 'logo.png'
                allow_stretch: True
                keep_ratio: True
                size_hint: (1, None)  # Occupy full width, automatic height
            Label:
                text: " REGISTER "
                font_size: 22
                bold: True
                color: 0, 0, 0, 1
                size_hint: (1, None)  # Occupy full width, automatic height
                height: self.texture_size[1]
                valign: 'middle'
            TextInput:
                id: full_name
                hint_text: 'Full Name'
                multiline: False
                size_hint: None, None
                size: 350, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: email_address
                hint_text: 'Email Address'
                multiline: False
                size_hint: None, None
                size: 350, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: birthday
                hint_text: 'Birthday (MM/DD/YYYY)'
                multiline: False
                size_hint: None, None
                size: 350, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
                input_filter: 'int'
                input_type: 'number'
            TextInput:
                id: phone_number
                hint_text: 'Phone Number'
                multiline: False
                size_hint: None, None
                size: 350, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
                input_filter: 'int'
                input_type: 'number'
                max_length: 11
            TextInput:
                id: home_address
                hint_text: 'Home Address'
                multiline: False
                size_hint: None, None
                size: 350, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: username
                hint_text: 'Username'
                multiline: False
                size_hint: None, None
                size: 350, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: password
                hint_text: 'Password'
                password: True
                multiline: False
                size_hint: None, None
                size: 350, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
            TextInput:
                id: confirm password
                hint_text: 'Confirm Password'
                password: True
                multiline: False
                size_hint: None, None
                size: 350, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
            Button
                text: 'Enter'
                on_press: root.consultation_form()
                size_hint: None, None
                size: 120, 30  # Set the size of the create account button
                pos_hint: {'center_x': 0.5}  # Center the button horizontally
                background_color: 0, 2, 0, 2  # Green color
                color: 1, 1, 1, 1  # White text color
            Button
                text: 'Back'
                on_press: root.manager.current = 'login'  # Navigate back to the login screen
                size_hint: None, None
                size: 100, 30
                pos_hint: {'center_x': 0.5}  # Center horizontally
                background_color: 0, 2, 0, 2  # Green color
                color: 1, 1, 1, 1  # White text color

