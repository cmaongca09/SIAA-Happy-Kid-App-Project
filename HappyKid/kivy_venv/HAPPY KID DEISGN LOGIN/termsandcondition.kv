<TermsItem>:
    orientation: 'vertical'
    Label:
        text: root.text



<TermsAndConditionTab>:
    name: 'termsConditionTab'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        size_hint_y: None
        height: self.minimum_height  
    Image:
        source: 'try.jpg'
        allow_stretch: True
        keep_ratio: False
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
    RecycleView:
        id: rv
        scroll_type: ['bars', 'content']
        bar_width: '10dp'
        viewclass: 'TermsItem'
        data: [{'text': str(x)} for x in range(100)]  # Adjust the data as per your requirements
        RecycleBoxLayout:
            default_size_hint: None, None
            default_size: None, dp(56)
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            padding: 10
            spacing: 10

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 40
            Label:
                text: 'Name of the Child:'
                font_size: 12
                color: 0, 0, 0, 1  # Black color
                size_hint_y: None
                height: 20
            TextInput:
                id: name_of_child
                multiline: False
                size_hint: (None, None)
                width: 300
                height: 30
                pos_hint: {'center_x': 0.5}
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 40
            Label:
                text: 'Date of Birth:'
                font_size: 12
                color: 0, 0, 0, 1  # Black color
                size_hint_y: None
                height: 20
            TextInput:
                id: dob_child
                multiline: False
                size_hint: (None, None)
                width: 300
                height: 30
                pos_hint: {'center_x': 0.5}
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 40
            Label:
                text: 'Address:'
                font_size: 12
                color: 0, 0, 0, 1  # Black color
                size_hint_y: None
                height: 20
            TextInput:
                id: address
                multiline: False
                size_hint: (None, None)
                width: 300
                height: 30
                pos_hint: {'center_x': 0.5}
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 40
            Label:
                text: 'Contact Numbers: (Also for verification/approval of account)'
                font_size: 12
